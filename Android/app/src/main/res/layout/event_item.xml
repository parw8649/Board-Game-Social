<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/very_light_tangelo_light_var" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/et_hint_event_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/tv_event_date_and_time"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/et_hint_date_time"
            android:layout_below="@id/tv_event_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/cd_view_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_date_and_time"
            android:text="@string/et_hint_event_description"
            android:maxLines="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Button
            android:id="@+id/btn_more_event"
            android:layout_width="@dimen/item_more_btn_width"
            android:layout_height="45dp"
            android:layout_toStartOf="@+id/btn_delete_event"
            android:layout_toEndOf="@+id/tv_event_name"
            android:backgroundTint="@color/blue_yonder"
            android:padding="@dimen/btn_padding_slim"
            android:text="@string/item_button_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageButton
            android:id="@+id/btn_delete_event"
            android:layout_width="@dimen/item_more_btn_width"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:backgroundTint="@color/blue_yonder"
            android:padding="@dimen/btn_padding_slim"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:contentDescription="TODO" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>