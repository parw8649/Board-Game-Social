<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:maxLines="1"
            android:text="@string/game_items_tv_game_title" />

        <TextView
            android:id="@+id/tv_game_genre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:layout_below="@+id/tv_game_title"
            android:text="@string/game_items_tv_game_genre" />

        <TextView
            android:id="@+id/tv_min_max_players"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:maxLines="1"
            android:layout_below="@+id/tv_game_genre"
            android:text="@string/game_item_tv_game_min_max_players" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>