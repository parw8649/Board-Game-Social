<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/very_light_tangelo_light_var" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/game_icon"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_image_placeholder"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/item_name_and_type" />

        <LinearLayout
            android:id="@+id/item_name_and_type"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_game_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/game_items_tv_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/tv_game_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/game_items_tv_genre"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <TextView
            android:id="@+id/game_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_icon"
            android:text="@string/game_items_tv_description"
            android:maxLines="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/tv_min_player_count"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_description"
            android:maxLines="1"
            android:text="@string/game_item_tv_min_players"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/tv_max_player_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_below="@id/game_description"
            android:layout_toEndOf="@id/tv_min_player_count"
            android:text="@string/game_item_tv_max_players"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/overall_play_count_text"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_min_player_count"
            android:maxLines="1"
            android:text="@string/game_item_tv_overall_player_count_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/overall_play_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_below="@id/tv_max_player_count"
            android:layout_toEndOf="@id/overall_play_count_text"
            android:text="@string/game_item_tv_overall_player_count"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>