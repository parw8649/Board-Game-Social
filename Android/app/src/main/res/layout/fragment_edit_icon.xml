<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainApp.Fragments.EditIconFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/icon_margin"
            android:text="@string/edit_icon_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="40sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/icon_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon_choice_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="@dimen/icon_margin"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />

            <ImageView
                android:id="@+id/user_icon_choice_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/icon_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon_choice_3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="@dimen/icon_margin"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />

            <ImageView
                android:id="@+id/user_icon_choice_4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/icon_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_icon_choice_5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="@dimen/icon_margin"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />

            <ImageView
                android:id="@+id/user_icon_choice_6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:src="@drawable/show_circular_image" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>