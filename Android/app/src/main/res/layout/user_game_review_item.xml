<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/very_light_tangelo_light_var">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_user_icon"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person_24"
            android:contentDescription="@string/VH_user_image_des" />

        <TextView
            android:id="@+id/item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_bio_padding"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/profile_bio_padding"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/item_user_icon"
            android:maxLines="1"
            android:text="@string/VH_user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/item_game_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_bio_padding"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/profile_bio_padding"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/item_user_icon"
            android:maxLines="3"
            android:text="@string/VH_game_review"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>